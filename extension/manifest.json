{
  "name": "PhishSight AI",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Real-time phishing protection with automatic blocking.",
  "action": {
    "default_title": "PhishSight AI",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ]
}